{
  "name": "@dcss-stats/api",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development tsx watch ./src/index.ts",
    "bootstrap": "yarn compose && yarn migrate",
    "migrate": "yarn prisma dev generate && yarn prisma dev migrate deploy && yarn prisma dev db seed",
    "compose": "docker compose -f ./docker-compose.local.yml up -d --remove-orphans",
    "start": "yarn prisma prod migrate deploy && yarn prisma prod db seed && NODE_ENV=production tsx ./src/index.ts",
    "build": "yarn prisma prod generate",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "lint": "eslint .",
    "test": "yarn vitest run",
    "test-all": "yarn lint && yarn type-check",
    "prisma": "node ./scripts/prisma.js"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "*.{ts,tsx}": [
      "eslint --max-warnings 0"
    ]
  },
  "dependencies": {
    "@bugsnag/js": "^7.25.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/swagger": "^8.15.0",
    "@fastify/type-provider-typebox": "^4.1.0",
    "@prisma/client": "^5.20.0",
    "@scalar/fastify-api-reference": "^1.25.10",
    "@sinclair/typebox": "^0.33.12",
    "axios": "^1.7.2",
    "dayjs": "^1.11.11",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "fs-extra": "^11.2.0",
    "lodash-es": "^4.17.21",
    "node-object-hash": "^3.0.0",
    "p-queue": "^7.4.1",
    "pretty-bytes": "^6.1.1",
    "prisma": "^5.20.0",
    "qs": "^6.12.3",
    "semver": "^7.6.3",
    "tsx": "^4.19.2"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.6",
    "@eslint/js": "^9.19.0",
    "@types/fs-extra": "^11.0.4",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.13.1",
    "@types/qs": "^6.9.18",
    "@types/semver": "^7.5.8",
    "dotenv-flow": "^3.3.0",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-no-relative-import-paths": "^1.6.1",
    "globals": "^15.8.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^7.18.0",
    "vitest": "^2.0.3"
  }
}
