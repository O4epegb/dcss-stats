{
  "name": "@dcss-stats/api",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development tsx watch ./src/index.ts",
    "bootstrap": "yarn compose && yarn migrate",
    "migrate": "yarn prisma dev generate && yarn prisma dev migrate deploy && yarn prisma dev db seed",
    "compose": "docker compose -f ./docker-compose.local.yml up -d --remove-orphans",
    "start": "yarn prisma prod migrate deploy && yarn prisma prod db seed && NODE_ENV=production tsx ./src/index.ts",
    "build": "yarn prisma prod generate",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "lint": "eslint .",
    "test": "yarn vitest run",
    "test-all": "yarn lint && yarn type-check",
    "prisma": "node ./scripts/prisma.js"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "*.{ts,tsx}": [
      "eslint --max-warnings 0"
    ]
  },
  "dependencies": {
    "@bugsnag/js": "^8.2.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/swagger": "^8.15.0",
    "@fastify/type-provider-typebox": "^4.1.0",
    "@prisma/client": "^5.22.0",
    "@scalar/fastify-api-reference": "^1.28.7",
    "@sinclair/typebox": "^0.34.30",
    "axios": "^1.8.4",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.7",
    "fastify": "^4.29.0",
    "fs-extra": "^11.3.0",
    "lodash-es": "^4.17.21",
    "node-object-hash": "^3.1.1",
    "p-queue": "^8.1.0",
    "pretty-bytes": "^6.1.1",
    "prisma": "^5.22.0",
    "qs": "^6.14.0",
    "semver": "^7.7.1",
    "tsx": "^4.19.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@types/fs-extra": "^11.0.4",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.13.11",
    "@types/qs": "^6.9.18",
    "@types/semver": "^7.5.8",
    "dotenv-flow": "^4.1.0",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-import-resolver-typescript": "^4.2.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-no-relative-import-paths": "^1.6.1",
    "globals": "^16.0.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.27.0",
    "vitest": "^3.0.9"
  }
}
