{
  "compilerOptions": {
    "lib": ["ES2024"],
    "target": "ES2024",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": false,
    "allowJs": true,
    "checkJs": true,
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "exclude": ["./crawl", "./src/forever-ignore/*"]
}
