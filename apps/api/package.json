{
  "name": "@dcss-stats/api",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development tsx watch ./src/index.ts",
    "bootstrap": "yarn compose && yarn migrate",
    "migrate": "yarn prisma dev generate && yarn prisma dev migrate deploy && yarn prisma dev db seed",
    "compose": "docker compose -f ./docker-compose.local.yml up -d --remove-orphans",
    "start": "yarn prisma prod migrate deploy && yarn prisma prod db seed && NODE_ENV=production tsx ./src/index.ts",
    "build": "yarn prisma prod generate",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "lint": "eslint .",
    "test": "yarn vitest run",
    "test-all": "yarn lint && yarn type-check",
    "prisma": "node ./scripts/prisma.js"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "*.{ts,tsx}": [
      "eslint --max-warnings 0"
    ]
  },
  "dependencies": {
    "@bugsnag/js": "^8.6.0",
    "@fastify/cors": "^11.1.0",
    "@fastify/otel": "^0.16.0",
    "@fastify/swagger": "^9.5.2",
    "@fastify/type-provider-typebox": "^6.0.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-prometheus": "^0.208.0",
    "@opentelemetry/instrumentation-http": "^0.208.0",
    "@opentelemetry/resources": "^2.2.0",
    "@opentelemetry/sdk-node": "^0.208.0",
    "@opentelemetry/semantic-conventions": "^1.38.0",
    "@prisma/client": "6.10.0",
    "@scalar/fastify-api-reference": "^1.38.0",
    "axios": "^1.12.2",
    "cron": "^4.3.4",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.7",
    "fastify": "^5.6.1",
    "fs-extra": "^11.3.0",
    "lodash-es": "^4.17.21",
    "node-object-hash": "^3.1.1",
    "p-queue": "^8.1.0",
    "pretty-bytes": "^6.1.1",
    "prisma": "6.10.0",
    "qs": "^6.14.0",
    "semver": "^7.7.1",
    "tsx": "^4.20.6",
    "typebox": "^1.0.30"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/fs-extra": "^11.0.4",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.19.0",
    "@types/qs": "^6.9.18",
    "@types/semver": "^7.5.8",
    "dotenv-flow": "^4.1.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-no-relative-import-paths": "^1.6.1",
    "globals": "^16.0.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0",
    "vitest": "^4.0.10"
  }
}
